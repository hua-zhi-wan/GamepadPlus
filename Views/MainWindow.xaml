<Window x:Class="AnotherGamepadPlus.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnotherGamepadPlus"
        mc:Ignorable="d"
        Title="AGP" Height="400" Width="500"
        Closing="Window_Closing"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 手柄连接状态 -->
        <Label Grid.Row="0" Grid.Column="0" Content="Controller Status:" Margin="5"/>
        <Label Grid.Row="0" Grid.Column="1" x:Name="ControllerStatusLabel" Content="Unconnected" Margin="5" Foreground="Red"/>

        <!-- 当前屏幕 -->
        <Label Grid.Row="1" Grid.Column="0" Content="Current Screen:" Margin="5"/>
        <Label Grid.Row="1" Grid.Column="1" x:Name="CurrentScreenLabel" Content="Unknown" Margin="5"/>

        <!-- 鼠标位置 -->
        <Label Grid.Row="2" Grid.Column="0" Content="Mouse Position:" Margin="5"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="MousePositionLabel" Content="(0, 0)" Margin="5"/>

        <!-- 灵敏度设置 -->
        <Label Grid.Row="3" Grid.Column="0" Content="Sensitivity:" Margin="5"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <Slider x:Name="SensitivitySlider" Minimum="1" Maximum="30" Value="10.0" Width="200" 
                    ValueChanged="SensitivitySlider_ValueChanged"/>
            <Label x:Name="SensitivityValueLabel" Content="10.0" Width="50" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 死区设置 -->
        <Label Grid.Row="4" Grid.Column="0" Content="Joystick Deadzone:" Margin="5"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <Slider x:Name="DeadZoneSlider" Minimum="0.0" Maximum="0.5" Value="0.1" Width="200"
                    ValueChanged="DeadZoneSlider_ValueChanged"/>
            <Label x:Name="DeadZoneValueLabel" Content="0.1" Width="50" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 操作说明 -->
        <GroupBox Grid.Row="5" Grid.ColumnSpan="2" Header="Operating Instruction" Margin="5">
            <Grid Margin="5">
                <!-- 定义两列：操作项和说明 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 行定义 - 自动适应高度以适应内容 -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 左摇杆 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Left Joystick:" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Controls mouse movement"/>

                <!-- A键/L键 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="A Button / L Button:" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Left mouse click"/>

                <!-- B键 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="B Button:" FontWeight="Bold"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Right mouse click"/>

                <!-- X键 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="X Button:" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Middle mouse click"/>

                <!-- 左肩键(LB) -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Hold Left Shoulder (LB):" FontWeight="Bold"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="Precision mode"/>

                <!-- 右肩键(RB) -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Hold Right Shoulder (RB):" FontWeight="Bold"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="Fast mode"/>

                <!-- 左扳机键(LT) -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Left Trigger (LT):" FontWeight="Bold"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Text="Mouse wheel scroll up"/>

                <!-- 右扳机键(RT) -->
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Right Trigger (RT):" FontWeight="Bold"/>
                <TextBlock Grid.Row="7" Grid.Column="1" Text="Mouse wheel scroll down"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
